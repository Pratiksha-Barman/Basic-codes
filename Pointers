//Write a program to find the largest number in an array using pointers.
#include <stdio.h>
void main()
{
    int a[10],*ptr,n,i,l;
    printf("Enter the number of elemnets\n");
    scanf("%d",&n);
    printf("Enter the elements\n");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    ptr=&a;
    for(i=1;i<n;i++)  
    {
        if(*(ptr+i)>a[0])
        {   
        *(ptr+i)=l;
        }
    }
    printf("%d is the largest",l);
}
